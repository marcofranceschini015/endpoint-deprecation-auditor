{
  "mcpServers": {
    "mcp-atlassian-jira": {
      "name": "Jira Cloud (mcp-atlassian)",
      "command": "/opt/homebrew/Cellar/uv/0.6.17/bin/uvx",
      "args": [
        "--with",
        "pydantic==2.10.6",
        "mcp-atlassian",
        "--verbose",
        "--jira-url=${JIRA_BASE_URL}",
        "--jira-username=${JIRA_EMAIL}",
        "--jira-token=${JIRA_TOKEN}"
      ]
    },
    "graylog": {
      "name": "Graylog",
      "type": "http",
      "url": "${GRAYLOG_BASE_URL}",
      "headers": {
        "X-GRAYLOG-API-TOKEN": "${GRAYLOG_TOKEN}"
      }
    }
  }
}
